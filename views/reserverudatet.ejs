<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="bus.css" />
    <link rel="stylesheet" href="rating.css" />


    <img src="ohoh.png" width="300px" height="300px" />
    <img src="gif (2).gif" width="300px" height="300px" style="top: -80px;left: 0px;" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--Stylesheet-->
    <style>
        body {
            background-color: rgb(133 208 187);
        }
        
        .backgroud {
            background-image: url("background.jpg");
            background-position: center;
            background-repeat: no-repeat;
            height: 400px;
            background-size: cover;
            margin: auto;
        }
        
        .backgroud img {
            position: relative;
            top: 200px;
        }
        
        .shape {
            width: 250px;
            height: 150px;
        }
        
        .Buttons {
            width: 40%;
            margin: auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 40px;
        }
        
        .Buttons button {
            padding: 10px;
            border-radius: 5px;
            background-color: #121113;
            color: white;
        }
    </style>

</head>

<body>

    <section>
        <h1>Bus</h1>

        <div class="tbl-header">
            <table>
                <thead>
                    <tr>
                        <th>Prenom</th>
                        <th>Nom</th>
                        <th>Telephone</th>
                        <th>Matricule</th>
                        <th>Point de départ</th>
                        <th>Point d'arrivée</th>
                        <th>Address</th>
                        <th>Ligne</th>


                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table>
                <tbody>

                    <tr>
                        <% Array.from(bus).forEach((items)=> { %>
                            <td>
                                <%=items.Prenom %>
                            </td>
                            <td>
                                <%=items.Nom%>
                            </td>
                            <td>
                                <%=items.Tele %>
                            </td>
                            <td>
                                <%=items.Matricule %>
                            </td>
                            <td>
                                <%=items.PdP %>
                            </td>
                            <td>
                                <%=items.PdA %>
                            </td>
                            <td>
                                <%=items.adressselect %>
                            </td>
                            <td>
                                <%=items.ligne %>
                            </td>
                            <td>
                                <button class="btn"><a href="/delete/bus/<%= items._id %>" class="fa fa-trash"></a></button>
                                <button class="btn"><a href="/edit/<%= items._id %>"class="fa fa-edit"></a></button>


                            </td>


                    </tr>
                    <% }) %>

                </tbody>
            </table>

        </div>
    </section>